{{#if product}}
<div class="container {{#if isLoading}}loading{{/if}}">
    <div class="product__main d-flex justify-content-around align-items-center">
        <div class="product__image-container {{#if ([helpers/hasNotImage] product.image)}}product__image-container--empty{{/if}}">
            <img class="product__image" src="{{product.image}}"></img>
        </div>
        <div class="product__options card">
            {{> main product}}
        </div>
    </div>
    {{#if ([helpers/hasDescription] product)}}
        {{> description product}}
    {{/if}}
</div>
{{else}}
<div class="mt-5 d-flex justify-content-center">
    <div class="spinner-border" role="status">
        <span class="visually-hidden"></span>
    </div>
</div>
{{/if}}