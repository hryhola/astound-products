<div class="card {{[helpers/isLoadingClass] isLoading}}">
    <div class="card-body">
        <h5 class="card-title">Your basket products</h5>
        {{#if ([helpers/hasBasketItems] items)}}
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Variant</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Remove</th>
                </tr>
            </thead>
            <tbody>
                {{#each items}}
                {{> productRow item=this}}
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <p class="mt-3">You have no items in the basket.</p>
        {{/if}}
    </div>
</div>